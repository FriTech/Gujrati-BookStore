<?xml version="1.0" encoding="UTF-8"?>
<modification>
	<id><![CDATA[Admin Login Add Frontend Main Store]]></id>
	<version><![CDATA[1.0]]></version>
	<vqmver required="true"><![CDATA[2.5.0]]></vqmver>
	<author><![CDATA[Onnets]]></author>

	<!-- ADMIN -->
	<!-- CONTROLLER -->
	<file name="admin/controller/common/login.php" error="log">
		<operation>
            <search position="after"><![CDATA[$data['button_login'] = $this->language->get('button_login');]]></search>
            <add><![CDATA[$data['button_store'] = $this->language->get('button_store');]]></add>
        </operation>
		<operation>
            <search position="after"><![CDATA[$data['action'] = $this->url->link('common/login', '', 'SSL');]]></search>
            <add><![CDATA[$data['store'] = HTTP_CATALOG;]]></add>
        </operation>
	</file>
	<!-- LANGUAGE -->
	<file name="admin/language/english/common/login.php" error="log">
		<operation>
            <search position="after"><![CDATA[$_['button_login']]]></search>
            <add><![CDATA[$_['button_store']   = 'Store';]]></add>
        </operation>
	</file>
	<!-- VIEW -->
	<file name="admin/view/template/common/login.tpl" error="log">
		<operation>
            <search position="after"><![CDATA[<button type="submit" class="btn btn-primary"><i class="fa fa-key"></i> <?php echo $button_login; ?></button>]]></search>
            <add><![CDATA[<a href="<?php echo $store; ?>" class="btn btn-primary" target="_blank"><i class="fa fa-home"></i> <?php echo $button_store; ?></a>]]></add>
        </operation>
	</file>
</modification>